public class Estudante {
    
    String nome;
    double notaMatematica;
    double notaPortugues;
    double notaCiencias;
    
    public double getMedia(){

        double result = 0;
        result = (notaMatematica + notaPortugues + notaCiencias)/3;
        return result;
    }
}
